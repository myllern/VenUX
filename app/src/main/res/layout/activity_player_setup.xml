<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_theme_bg"
    android:onClick="startGame"
    android:paddingRight="10dp"
    tools:context=".activities.PlayerSetupActivity">

    <Button
        android:id="@+id/playerSetup_btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="96dp"
        android:width="400dp"
        android:height="75dp"
        android:insetLeft="32dp"
        android:insetRight="32dp"
        android:onClick="startGame"
        android:text="@string/start"
        android:textColor="#000000"
        android:textSize="24sp"
        app:backgroundTint="#FFFFFF"
        app:cornerRadius="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/playerSetup_instruction_btn"
        android:layout_width="131dp"
        android:layout_height="42dp"
        android:onClick="goToInstructions"
        android:text="@string/playerSetup_instruction"
        android:textSize="12sp"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerSetup_btn_start"
        app:layout_constraintVertical_bias="0.466" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="367dp"
        android:layout_height="67dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/rounded_shape"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintBottom_toTopOf="@+id/playerSetup_btn_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Add Another Player"
            android:inputType="textPersonName" />

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/playerSetup_addPlayer_btn"
            android:layout_width="8dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="+"
            app:cornerRadius="25dp" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="365dp"
        android:layout_height="430dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_shape"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">


            <TextView
                android:id="@+id/playerSetup_player_1_nameTV"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Player 1"
                android:textColor="#5C6BC0"
                android:textSize="24sp" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/playerSetup_player_1_color"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="Color"
                app:backgroundTint="#FF0707"
                app:cornerRadius="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_shape"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="invisible">


            <TextView
                android:id="@+id/playerSetup_player_2_nameTV"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:textColor="#5C6BC0"
                android:textSize="24sp" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/playerSetup_player_2_color"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="Color"
                app:backgroundTint="#29B6F6"
                app:cornerRadius="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_shape"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="invisible">


            <TextView
                android:id="@+id/playerSetup_player_3_nameTV"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Player 3"
                android:textColor="#5C6BC0"
                android:textSize="24sp" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/playerSetup_player_3_color"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="Color"
                app:backgroundTint="#66BB6A"
                app:cornerRadius="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_shape"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="invisible">


            <TextView
                android:id="@+id/playerSetup_player_4_nameTV"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Player 4"
                android:textColor="#5C6BC0"
                android:textSize="24sp" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/playerSetup_player_4_color"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="Color"
                app:backgroundTint="#FFEE58"
                app:cornerRadius="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_shape"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="invisible">


            <TextView
                android:id="@+id/playerSetup_player_5_nameTV"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Player 5"
                android:textColor="#5C6BC0"
                android:textSize="24sp" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/playerSetup_player_6_color"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="Color"
                app:backgroundTint="#AB47BC"
                app:cornerRadius="25dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_shape"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="invisible">


            <TextView
                android:id="@+id/playerSetup_player_6_nameTV"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Player 6"
                android:textColor="#5C6BC0"
                android:textSize="24sp" />

            <Space
                android:layout_width="30dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/button"
                android:layout_width="30dp"
                android:layout_height="40dp"
                android:text="Color"
                app:backgroundTint="#E91E63"
                app:cornerRadius="25dp" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>